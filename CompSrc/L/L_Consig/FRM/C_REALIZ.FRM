#doc
Отчет об остатках консигнационного товара с группировкой
по группам товаров
#end
.set name='c_realiz'
.hide
.var
  ИтогоЗаДату : double
  ИтогоПоМЦ : double
  ИтогоПоВедомости  : double
.endvar
.fields
  ДатаНачальная ДатаКонечная
  ДатаРеализации
  МЦ ЕдиницаИзмерения
  КоличествоПроданного : double  КоличествоВсего
  НомерДокумента
  ИмяОрганизации
  ДатаДокумента
.endfields
^^
.begin
  ИтогоПоВедомости := 0;
 end.
.{ CheckEnter c_RealizDate_LOOP
^
.begin
  ИтогоЗаДату := 0
 end.
.{ CheckEnter c_RealizTMC_LOOP
.begin
  ИтогоПоМЦ := 0;
 end.
^^
.{ CheckEnter c_RealizKol_LOOP
^^^^^
.begin
  ИтогоПоМЦ := ИтогоПоМЦ + КоличествоПроданного;
  ИтогоЗаДату := ИтогоЗаДату + КоличествоПроданного;
 end.
.}
.}
.begin
  ИтогоПоВедомости := ИтогоПоВедомости + ИтогоЗаДату
 end.
.}
.endform

