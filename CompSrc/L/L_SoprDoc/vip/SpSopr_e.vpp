#ifndef _SPSOPR_E_VPP
#define _SPSOPR_E_VPP

cmInsertRecord :
  {
    #ifdef __SKYSHOP__
    if (KatSopr.status<>0) and (KatSopr.VidSopr = word(202))
      {
        message(''#3'Редактирование спецификации возможно'#13#3+
                    'только в статусе документа "оформляемый"');
        abort;
        stop;
        exit;
      }
    #end

    #ifdef _AKTUSLB_VIP
    #ifdef _AKT110_
    if (TypeSopr = 110 and CurFormatInArea(brSpecif1102)=brSpecif1102)
      SpSopr.PrMC := 1;
    else
    #end
    #end
      SpSopr.Npp := oSpNext.GetSpNppNext(KatSopr.NRec,coSpSopr);

    if (Insert current SpSopr <> tsOk)
      {}
  }

cmUpdateRecord :
  Update current SpSopr;

cmPositionChanged :
  {
    if (SpSopr.cMCUSL = 0)
      {
        oSDfuns.SpSopr_Delete (SpSopr.nRec);
//        rereadrecord(#SpSopr); // ПИР 102.58758
      }

    if (isProtected(#KatSopr))
      ProtectRecord(#SpSopr,true);

    if CurTable=#SpSopr and boGetTune('Oper.NalUch')
      set sumNalUch:= SpSopr.priceN*SpSopr.kolFact;

#ifdef _AKTUSLB_VIP
#ifNdef AKT_112
    if ( IsValid(#KSSopr) and ((KSopr.VidSopr = 101) or (KSopr.VidSopr = 108)))
      PutCommand(cmValue31);
#end
#end
  }

cmCheckField :
  case CurField of
    #SpSopr.Price  :
      {
        SpSopr.Price := SpSopr.Price;
        set SpSopr.rPrice := SpSopr.Price;
      }
    #SpSopr.VPrice :
      {
        SpSopr.VPrice := SpSopr.VPrice;
        set SpSopr.rVPrice:=SpSopr.VPrice;
      }
    #SpSopr.rPrice  :
      set SpSopr.rPrice := SpSopr.rPrice;
    #SpSopr.rVPrice :
      set SpSopr.rVPrice := SpSopr.rVPrice;
  end;

cmCheckSumma :
  {
    RecalcSumm(false);
    Update_Current_KatSopr;
  }

cmDelOnProtect:
  case CurField of
    #KlVal.Simvolv :
      Abort;
  end; // case cmDelOnProtect

cmSetDefault :
  {
#ifdef __SKYSHOP__
    if (KatSopr.status<>0) and (KatSopr.VidSopr = word(202))
      {
        message(''#3'Редактирование спецификации возможно'#13#3+
                    'только при статусе документа "оформляемый"',Warning+CancelButton);
        abort; stop; exit;
      }
#end
    if (not CanEditDocument)
      Abort;

#ifdef _AKTUSLB_VIP
#ifNdef AKT_112
    if ( IsValid(#KSSopr) and ((KSopr.VidSopr = 101) or (KSopr.VidSopr = 108)) )
      SetEditOption2;
#end
#end
  }

cmDeleteRecord :
  {
#ifdef __SKYSHOP__
    if (KatSopr.status<>0) and (KatSopr.VidSopr = word(202))
      {
        message(''#3'Редактирование спецификации возможно'#13#3+
                   'только при статусе документа "оформляемый"',Warning+CancelButton);
        abort; stop; exit;
      }
#end
    if (not CanEditDocument)
      Abort;
  }

#end //_SPSOPR_E_VPP
