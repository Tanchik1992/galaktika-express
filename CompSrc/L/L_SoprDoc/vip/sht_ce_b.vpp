var
  SHT_CE_begin_close : word ;
Window SHT_CE_begin 'Задание типа взвешивания' EscClose,DoAccept;
  show at (10,7,70,19) ;

Screen scrSHT_CE_begin ('Задание типа взвешивания',hcSHT_SetVesType,sci1Esc)
Buttons
  cmValue1,,, 'Взвесить пустой автомобиль, тип накладной "навальная"';
  cmValue11,,,'Взвесить пустой автомобиль, тип накладной "тарная"';
  cmValue2,,, 'Взвесить груженый автомобиль, тип накладной "навальная"';
  cmValue21,,,'Взвесить груженый автомобиль, тип накладной "тарная"';
  cmValue3,,, 'Проинициализировать весы';
  cmValue4,,, 'Сбросить весы в НОЛЬ';
  cmCancel,,, 'Выход';
<<

  Формирование распоряжений <.  Тара   .> <.  Навал  .>

  Формирование накладных    <.  Тара   .> <.  Навал  .>

                            <. Инициализировать весы .>

                            <.    Сбросить в НОЛЬ    .>

                            <.         Отмена        .>

>>
end ; // Screen scrSHT_CE_begin

HandleEvent // Window SHT_CE_begin
cmInit   :
  {
    SHT_CE_tip         := 0 ;
    SHT_CE_begin_close := 0 ;
    init_scales        := false;
  }

cmValue1 :
  {
    SHT_CE_tip         := 0 ;
    SHT_CE_begin_close := 1 ;
    SHT_CE_vid         := 1 ;
    PutCommand(cmDefault) ;
  }

cmValue11 :
  {
    SHT_CE_tip         := 0 ;
    SHT_CE_begin_close := 1 ;
    SHT_CE_vid         := 2 ;
    PutCommand(cmDefault) ;
  }

cmValue2 :
  {
    SHT_CE_tip         := 1 ;
    SHT_CE_begin_close := 1 ;
    SHT_CE_vid         := 1 ;
    PutCommand(cmDefault) ;
  }
cmValue21 :
  {
    SHT_CE_tip         := 1 ;
    SHT_CE_begin_close := 1 ;
    SHT_CE_vid         := 2 ;
    PutCommand(cmDefault) ;
  }
cmDefault :
  {
    SaveMyDsk(SHT_CE_vid,'for_prnsopr_SHT_CE_vid');
    if (SHT_CE_begin_close <> word(0))
      PackFields ;
  }

cmValue3 : 
  SHT_CE_Init ;

cmValue4 : 
  SHT_CE_Zero ;

end; 
end; 