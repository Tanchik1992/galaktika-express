var arraySHL : array [0..15] of word;

procedure Init_arraySHL;
  {
  arraySHL[ 0] :=     1;
  arraySHL[ 1] :=     2;
  arraySHL[ 2] :=     4;
  arraySHL[ 3] :=     8;
  arraySHL[ 4] :=    16;
  arraySHL[ 5] :=    32;
  arraySHL[ 6] :=    64;
  arraySHL[ 7] :=   128;
  arraySHL[ 8] :=   256;
  arraySHL[ 9] :=   512;
  arraySHL[10] :=  1024;
  arraySHL[11] :=  2048;
  arraySHL[12] :=  4096;
  arraySHL[13] :=  8192;
  arraySHL[14] := 16384;
  arraySHL[15] := 32768;
  }


//-- งฏเฅ้ฅญ ซจ ฏฎฌฅโช งฏจแจ curValue

function ItemAccessDenided (Maska:word;curValue:word) : boolean;
var n   : byte;
  {
  ItemAccessDenided := false;
  if (Maska = 0)
    EXIT;
  FOR ( n:=0; n<=15; n:=n+1)
    if ( (n = curValue) and ((arraySHL[n] and Maska) <> 0) )
      {
      ItemAccessDenided := true;
      EXIT;
      }
  }