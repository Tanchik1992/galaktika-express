!для формирования различных типов КС
.begin
  IsBasePrice := (Тип_отчета AND 2) = 2;
  IsNalogs    := (Тип_отчета AND 4) = 4;

  strHeader  := '';

  if (Доп_инфо AND 1) = 1
    strHeader := CommonFormHeader;

  if (Доп_инфо AND 2) = 2
    strHeader := strHeader 
                 + '['
                 + if ((Тип_отчета AND 2) = 2, ' БАЗИСНЫЕ ЦЕНЫ', ' ТЕКУЩИЕ ЦЕНЫ')
                 + if ((Тип_отчета AND 2) = 2, 
                       '', 
                       if ((Тип_отчета AND 4) = 4, ', ЦЕНЫ С НАЛОГАМИ', ', ЦЕНЫ БЕЗ НАЛОГОВ'))
                 + ']';
end.
