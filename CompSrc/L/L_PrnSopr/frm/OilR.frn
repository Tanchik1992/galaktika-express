#ifdef DEI_CAPACITY
.var 
  pOilSpSopr: comp;
.endvar
.create view Oil
from
   SpSopr   (ReadOnly),
   KatOtpEd (ReadOnly)
  ,KATSOPR
where
 ((
    pOilSpSopr     == SpSopr.Nrec    and 
    SpSopr.cOtpEd  == KatOtpEd.NRec   
 ))
;
.function GetCapacity (_pNrec: comp ) : double ; // возвращает Обем
begin
  pOilSpSopr  := _pNrec;
  GetCapacity := 0;
 
 If Oil.GetFirst SpSopr = tsOk
    if Oil.SpSopr.OilPlot<>0
       GetCapacity := (Oil.SpSopr.KolFact/Oil.SpSopr.OilPlot)*Oil.KatOtpEd.Koef;
end.
#end