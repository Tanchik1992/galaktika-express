!инициализация переменных для fast-отчетов
.begin
   IF FASTREPORT.getfirst Katsopr where ((накладная_нрек  == Katsopr.NRec)) = tsOk
    {
      KatSoprVhodNal := FASTREPORT.KatSopr.VhodNal;
      KatSoprVidSopr := FASTREPORT.KatSopr.VidSopr;
    }

   case KatSoprVidSopr of
     600..606:
       isTTN_Fast := FALSE;
   end;
end.
