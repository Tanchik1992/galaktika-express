#ifndef _ORG_DECL_FRN_
!чтоб 2 раза не компилилось в одном проекте
#define _ORG_DECL_FRN_
!вывод информации о контрагенте
!стандартный (организация)
#declare OrgFields(Org)
 #Org
 + if(#(Org)УНН         <> '', ',' + unn_   + #(Org)УНН,         '')
 + if(#(Org)_Адрес      <> '', ', Адрес: '  + #(Org)_Адрес,      '')
 + if(#(Org)_ТЕЛ        <> '', ', тел.: '   + #(Org)_ТЕЛ,        '')
#end
!стандартный с юридическим адресом (организация)
#declare OrgFieldsUr(Org)
 #Org
 + if(#(Org)УНН         <> '', ',' + unn_   + #(Org)УНН,         '')
 + if(#(Org)_ЮрАдрес    <> '', ', Адрес(юрид.): ' + #(Org)_ЮрАдрес,
                               if(#(Org)_Адрес      <> '', ', Адрес: ' + #(Org)_Адрес, ''))
 + if(#(Org)_ТЕЛ        <> '', ', тел.: '   + #(Org)_ТЕЛ,        '')
#end
!стандартный (банк)
#declare OrgFieldsBank(Org)
   if(#(Org)_БАНК_Имя       <> '', 'БАНК: '     + #(Org)_БАНК_Имя,   '')
 + if(#(Org)_БАНК_Счет      <> '', ', р/с: '    + #(Org)_БАНК_Счет,  '')
 + if(#(Org)_БАНК_Мфо       <> '', ',' + mfo_   + #(Org)_БАНК_Мфо,   '')
 + if(#(Org)_БАНК_Счет_Ркц  <> '', ', к/с: '  + #(Org)_БАНК_Счет_Ркц, '')
 + if(#(Org)_БАНК_Ркц       <> '', ',' + mfo_ + #(Org)_БАНК_Ркц,      '')
#end
!только реквизиты организации
#declare OrgOnly(Org)
 #Org
 + if(#(Org)УНН         <> '', ',' + unn_   + #(Org)УНН,         '')
 + if(#(Org)_Адрес      <> '', ', Адрес: '  + #(Org)_Адрес,      '')
 + if(#(Org)_ТЕЛ        <> '', ', тел.: '   + #(Org)_ТЕЛ,        '')
#end
!для белорусских накладных (без поля УНН)
#declare OrgTTNBel(Org)
 #Org
 + if(#(Org)_Адрес      <> '', ', Адрес: '  + #(Org)_Адрес,      '')
 + if(#(Org)_БАНК_Имя   <> '', ', Банк: '   + #(Org)_БАНК_Имя,   '')
 + if(#(Org)_БАНК_Счет  <> '', ', р/с: '    + #(Org)_БАНК_Счет,  '')
 + if(#(Org)_БАНК_Мфо   <> '', ',' + mfo_   + #(Org)_БАНК_Мфо,   '')
 + if(#(Org)_БАНК_Адрес <> '', ', Адрес: '  + #(Org)_БАНК_Адрес, '')
#end
!для белорусских накладных (без поля УНН)
#declare OrgTTNBelAddr(Org)
 #Org
 + if(#(Org)_Адрес      <> '', ', Адрес: '  + #(Org)_Адрес,      '')
#end
!для белорусских накладных (с ОКПО и УНН)
#declare OrgTTNBelOKPO(Org)
 #Org
 + if(#(Org)УНН         <> '', ',' + unn_   + #(Org)УНН,         '')
 + if(#(Org)_ОКПО       <> '', ',' + okpo_  + #(Org)_ОКПО,       '')
 + if(#(Org)_Адрес      <> '', ', Адрес: '  + #(Org)_Адрес,      '')
 + if(#(Org)_БАНК_Имя   <> '', ', Банк: '   + #(Org)_БАНК_Имя,   '')
 + if(#(Org)_БАНК_Счет  <> '', ', р/с: '    + #(Org)_БАНК_Счет,  '')
 + if(#(Org)_БАНК_Мфо   <> '', ',' + mfo_   + #(Org)_БАНК_Мфо,   '')
 + if(#(Org)_БАНК_Адрес <> '', ', Адрес: '  + #(Org)_БАНК_Адрес, '')
#end
!для белорусских накладных (с ОКПО и УНН)
#declare OrgTTNBelAddrOKPO(Org)
 #Org
 + if(#(Org)УНН         <> '', ',' + unn_   + #(Org)УНН,         '')
 + if(#(Org)_ОКПО       <> '', ',' + okpo_  + #(Org)_ОКПО,       '')
 + if(#(Org)_Адрес      <> '', ', Адрес: '  + #(Org)_Адрес,      '')
#end
!для белорусских накладных (банковские реквизиты)
#declare OrgTTNBelBank(Org)
   if(#(Org)_БАНК_Имя   <> '', ', Банк: '   + #(Org)_БАНК_Имя,   '')
 + if(#(Org)_БАНК_Счет  <> '', ', р/с: '    + #(Org)_БАНК_Счет,  '')
 + if(#(Org)_БАНК_Мфо   <> '', ',' + mfo_   + #(Org)_БАНК_Мфо,   '')
 + if(#(Org)_БАНК_Адрес <> '', ', Адрес: '  + #(Org)_БАНК_Адрес, '')
