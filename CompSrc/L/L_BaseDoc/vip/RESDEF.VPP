Create view SpStepCopy
From
  SpStep;

//******************************************************************************

Function ResDef: boolean;
{
  ResDef := FALSE;

  var cStepDoc: comp;  cStepDoc := StepDoc.NRec;

  SpStepCopy._LOOP SpStep where ((cStepDoc == SpStep.cStepDoc AND  
                                   word(1) == SpStep.PrMC ))
    if (SpStepCopy.SpStep.Reserv > 0)
      {
        ResDef := TRUE;
        Break;
      }
}

