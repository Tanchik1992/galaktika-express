#end

.set name='AppVeks'
.nameinlist 'Базовая форма'
.hide
.var
  Sum_Nom_I  : double;
  Sum_Nde    : double;
  Sum_Val    : double;
  Sum_Proc_I : double;
  Sum_D      : double;
  Name_sum   : string;
.endvar
.fields
  Nrec_APP              // Nrec АПП
  val       : comp
  Simvol_Val

  Name1
  Name2
  AktNo                 // номер АПП
  AktDate               // дата АПП
  Name_Org              // контрагент по АПП
  Prim                  // примечание АПП

  Nrec_Veksl            // Nrec Veksl
  Name_Pl               // плательщик по векселю
  Name_Vd               // эмитент (векселедатель)
  Name_T                // текущий векселедержатель
  Ser                   // серия векселя
  N_doc                 // номер векселя
  N_doc_End             // номер векселя конечный
  Sum_Nom   : double    // сумма по наминалу векселя
  Sum_NomV  : double    // сумма по наминалу векселя
  Sum_Op    : double    // сумма операции
  Sum_OPV   : double    // сумма операции в валюте
  kol       : word      // количество
  Sum_Proc  : double    // начисленные проценты
  Sum_ProcV : double    // начисленные проценты
  Proc      : double    // проценты по векселю
  D_S                   // дата векселя
  Srok                  // срок погашения
.endfields
.begin
  Sum_Nom_I  := 0;
  Sum_Nde    := 0;
  Sum_Val    := 0;
  Sum_Proc_I := 0;
  Sum_D      := 0;
end.
.{
^ ^ ^ ^ ^ ^ ^ ^ ^
.{
^ ^ ^ ^ ^ ^ ^ ^ ^ ^ ^ ^ ^ ^ ^ ^ ^
.begin
  Sum_D      := if(val=0,Sum_Op,Sum_OpV)*kol;
  Sum_Nom_I  := Sum_Nom_I  + Sum_D;
  Sum_Nde    := Sum_Nde + Sum_Op*kol;
  Sum_Val    := Sum_Val + Sum_OpV*kol;
  Sum_Proc_I := Sum_Proc_I + Sum_Proc;
end.
.}
.begin
Name_Sum := DoubleToString(val,Sum_Nom_I);
end.
.}
.endform
