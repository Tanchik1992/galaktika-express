.function MakeNum(S: String; C: Char; Cnt: Byte): String;
var
  I: Word;
  R: String;
begin
  S := Pad(SubStr(S, 1, Cnt), Cnt);
  R := '';
  for (I := 1 ; I <= Cnt ; I := I + 1)
  begin
    R := R + SubStr(S, I, 1);
    if I < Cnt then
      R := R + C;
  end;
  MakeNum := R;
end.
