#ifdef _SOPRDOC_VIP

cmDoRes:
  if (NOT NullVipRef(oSopInMov))
  {
    if (OtkatToOldState(TRUE, word(0)))
      if (Message('Произвести резервирование матценностей по акту?', YesNo + Confirmation) = cmYes)
        oSopInMov.MakeReservePub(KatSopr.NRec, TRUE);
    ReReadRecord(#KatSopr);
  }

cmSkipRes:
  if (NOT NullVipRef(oSopInMov))
  {
    if (OtkatToOldState(TRUE, word(0)))
      if (Message('Снять матценности с резерва?', YesNo+Confirmation) = cmYes)
        oSopInMov.MakeReservePub(KatSopr.NRec, FALSE);
    ReReadRecord(#KatSopr);
  }

#end
