cmRestoreDoc:
  Case CurField of

    #KatSopr.nDover:
      PicknDover(3);

    #Dogovor.NoDoc,
    #Dogovor.dDoc,
    #AppDogovor.NoDoc,
    #AppDogovor.dDoc,
    #CalPlan.NoDoc,
    #CalPlan.dInput :
      {
        if not OtkatToOldState(true,word(0))
          Exit;
        case curfield of
          #Dogovor.NoDoc,
          #Dogovor.dDoc:
            SaveMyDsk(word(1),'_ISSELECT_DSK_');
          #AppDogovor.NoDoc,
          #AppDogovor.dDoc:
            SaveMyDsk(word(2),'_ISSELECT_DSK_');
          #CalPlan.NoDoc,
          #CalPlan.dInput:
            SaveMyDsk(word(4),'_ISSELECT_DSK_');
          else
            SaveMyDsk(word(4),'_ISSELECT_DSK_');
        end;
          var OldOrg : comp;  OldOrg := KatSopr.cOrgBase;

          if DogovorcmRestoreDoc
            {
              ChangeSpDocNalOrg(OldOrg, KatSopr.cOrgBase);
              CheckSumma(true);
            }
      }
  End; // Case

