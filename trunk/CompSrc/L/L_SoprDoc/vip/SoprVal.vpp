          set SpSopr.rPrice  := FRoundRubOrd(1, SpSopr.rPrice);
          set SpSopr.rVPrice := FRoundValOrd(1, SpSopr.rVPrice);
          set SpSopr.price  := SpSopr.rPrice;
          set SpSopr.vPrice := SpSopr.rVPrice;
        }
    }
}


