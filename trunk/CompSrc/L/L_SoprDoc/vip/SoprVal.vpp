  if (KatSopr.vidSopr>= 600 AND KatSopr.vidSopr<= 625) OR (KatSopr.vidSopr = 204)//склад
    {
      SpSopr.Price := FRoundRubOrd(1, SpSopr.rPrice * SpSopr.kolFact)/SpSopr.kolFact;
