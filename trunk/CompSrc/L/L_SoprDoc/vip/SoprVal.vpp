Function CheckPriceMethod (iField: integer): word;
{
  //Пересчет суммы в валюте по текущему курсу
  CheckPriceMethod := GetValRubCalc(KatSopr.VidSopr);

  case CheckPriceMethod of
  //**********************
    0: //Да
       case iField of
       //------------
         #ifdef _SOPRDOCB_VIP
         #SpSopUsl.Price,
         #SpSopUsl.rPrice,
         #end
         #SpSopr.Price,
         #SpSopr.rPrice:
           CheckPriceMethod := 10;
       //------------
         #ifdef _SOPRDOCB_VIP
         #SpSopUsl.VPrice,
         #SpSopUsl.rVPrice,
         #end
         #SpSopr.VPrice,
         #SpSopr.rVPrice:
           CheckPriceMethod := 20;
       //------------
         else //case CurField of
           CheckPriceMethod := if (KatSopr.cVal = 0, 10, 20);
       //------------
       end;
  //**********************
    2: //По запросу
      case iField of
       //------------
        #ifdef _SOPRDOCB_VIP
        #SpSopUsl.Price,
        #SpSopUsl.rPrice,
        #end
        #SpSopr.Price,
        #SpSopr.rPrice:
          {
            if (Message('Пересчитать цену в валюте по курсу на '+
                         string(KatSopr.dPrice)+' для док-та №'+string(Katsopr.NSopr)+ '?', YesNo) = cmYes)
              CheckPriceMethod := 10;
            else
              CheckPriceMethod := 11;
          }
       //------------
        #ifdef _SOPRDOCB_VIP
        #SpSopUsl.VPrice,
        #SpSopUsl.rVPrice,
        #end
        #SpSopr.VPrice,
        #SpSopr.rVPrice:
          {
            if (Message('Пересчитать цену в НДЕ по курсу на '+
                        string(KatSopr.dPrice)+' для документа №'+string(Katsopr.NSopr)+'?', YesNo) = cmYes)
              CheckPriceMethod := 20;
            else
              CheckPriceMethod := 21;
          }
       //------------
        else //case CurField of
          {
            if KatSopr.cVal = 0
              {
                if (Message('Пересчитать цену в валюте по курсу на '+
                           string(KatSopr.dPrice)+' для документа №'+string(Katsopr.NSopr)+ '?', YesNo) = cmYes)
                   CheckPriceMethod := 10;
                else
                   CheckPriceMethod := 11;
              }
            else
              {
                if (Message('Пересчитать цену в НДЕ по курсу на '+
                        string(KatSopr.dPrice)+' для документа №'+string(Katsopr.NSopr)+'?', YesNo) = cmYes)
                   CheckPriceMethod := 20;
                else
                   CheckPriceMethod := 21;

              }
          }
       //------------
      end;
  //**********************
  end;//case
}

//******************************************************************************
// Изменение даты цен для накладной
Function ChangeSpSoprCurse: boolean;
{
  ChangeSpSoprCurse := FALSE;
  if (Message('Пересчитать цены по новому курсу?', YesNo) <> cmYes)
    Exit;

  var DatCurs: Date;    DatCurs := KatSopr.dPrice;
  var PrCurse: double;  PrCurse := 0;
  var ChAll: boolean;   ChAll   := TRUE;

  if (PrCurse = 0)
    PrCurse := GetCursPrice;

  PushPos(#SpSopr);

  _LOOP SpSopr where ((KatSopr.NRec == SpSopr.cSopr))
    {
      if ((KatSopr.cVal <> 0) OR (Val_Rub_KatSopr(KatSopr.NRec) > 1))
        {
          SpSopr.Price := SpSopr.VPrice * PrCurse;
          SpSopr.rPrice := SpSopr.Price;
        }
      else
        {
          SpSopr.VPrice := SpSopr.Price / PrCurse;
          SpSopr.rVPrice := SpSopr.VPrice;
        }

      if (KatSopr.cVal <> 0 OR (Val_Rub_KatSopr(KatSopr.NRec) > 1))
        SpSopr.rPrice := SpSopr.rVPrice * PrCurse;
      else
        SpSopr.rVPrice := SpSopr.rPrice / PrCurse;

      Update Current SpSopr;
    }

  PopPos(#SpSopr);
  ChangeSpSoprCurse := TRUE;
}

