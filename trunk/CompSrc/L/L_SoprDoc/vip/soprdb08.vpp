         ToMenuAdd('Oper.Buy.Nakl.DopFunc04', cmVal6, MenuID)
         PutHotCommand(RunLoadMenu(MenuID));
      }else
      {
        if katsopr.transp > 0
           PutHotCommand(RunMenu(#AddComp('L_SOPRDOC')'SoprDocbExtendetInfo_0'));
      }
    }
#end
}


