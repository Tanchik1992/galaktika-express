         MenuID := LoadMenu(#AddComp('L_SOPRDOC')'ProizvObjEdit');
         AddMenuItem(MenuID, 'separator', cmCheckSumma);
         ToMenuAdd('Oper.Buy.Nakl.DopFunc01', cmVal3, MenuID)
