#include SOPRC13.VPP
cmPositionChanged :
  SetRoundFormat(TypeSopr);//-- ชซแแ๋ โฎ็ญฎแโจ

cmMarkUnMark :
  if (SearchMarker(MarkerNZ,KatSopr.NRec,IndexNZ))
    {
      DeleteMarker(MarkerNZ,KatSopr.NRec)
      #ifdef ATL51
      RedrawCurrentAndGo (GetCurrentFormat,true);
      #else
      if (GetNext KatSopr = tsOk)
        CallToNeighBours(cmPosDown,#KatSopr);
      RescanPanel(#KatSopr);
      #end
    }
  else
    {
      InsertMarker(MarkerNZ,KatSopr.NRec);
      #ifdef ATL51
      RedrawCurrentAndGo (GetCurrentFormat,true);
      #else
      if (GetNext KatSopr = tsOk)
        CallToNeighBours(cmPosDown,#KatSopr);
      RescanPanel(#KatSopr);
      #end
    }

cmSelectAll :
  {
    PushPos(#KatSopr);
    ClearMarker(MarkerNZ);
    StartNewVisual(vtNumericVisual, vfTimer+vfBreak+vfConfirm,''#3'ฎฌฅโช คฎชใฌฅญโฎข: ', 1);
    _LOOP KatSopr
      if (not NextVisual)
        Break;
      else
        if ( not  SearchMarker(MarkerNZ,KatSopr.NRec,IndexNZ))
          InsertMarker(MarkerNZ,KatSopr.NRec);
    PopPos(#KatSopr);
    RescanPanel(#KatSopr);
    StopVisual('',0);
  }

cmUnSelectAll :
  {
    ClearMarker(MarkerNZ);
    RescanPanel(#KatSopr);
  }

//-------------------------------------
cmDefault  :
  {
    PutCommand(cmEditSopr);
    Stop;
  }

cmEditSopr :
  {
    #ifdef _RETTARA_
    old_TaraVoz := KatSopr.TaraVoz;
    #end
//    NOAktRec:=CheckAktRec;//ญฎฌฅเ เฅชซฌๆจฎญญฎฉ ญชซคญฎฉ

    #ifdef __SKYSHOP__
    SetFormat(if (KatSopr.VidSopr = 202,scrHeaderSkyShop, scrHeader));
    #end

    PosChange;
    on_off_type(false);

    RunWindow(EditSopr);
    Case wGetTune('Doc.NaklDef') of
      1: SelectField (#KatSopr.NSopr);
      2: SelectField (#BDNomDes);
      3: SelectField (#KatSopr.dSopr);
    End;
  }
