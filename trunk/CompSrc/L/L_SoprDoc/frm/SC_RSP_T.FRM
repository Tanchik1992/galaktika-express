#doc
Распоряжение на погрузку (тарное)
#end
.AutoForm 'SC_Rasp_t'(var pKatSopr:comp)
.NameInList 'Распоряжение на погрузку (тарное)'
.group 'Штерн Цемент'
!.list ''
.Create view SC_Rasp_main1
from
   KatSopr                    (ReadOnly)
  ,SpSopr                     (ReadOnly)
  ,TTNDoc                     (ReadOnly)
  ,KatOrg                     (ReadOnly)
  ,Transp                     (ReadOnly)
  ,KnDriver                   (ReadOnly)
  ,KatMC                      (ReadOnly)
  ,KatOtpEd                   (ReadOnly)
  ,MetLoad                    (ReadOnly)
  ,synonym KatOrg BaseKatOrg  (ReadOnly)
where
  ((
    pKatSopr            ==   KatSopr.nRec    and
    KatSopr.NRec        ==   SpSopr.cSopr    and
    KatSopr.cOrgBase    ==   BaseKatOrg.NRec and
    word(1)             ==   SpSopr.PrMC     and
    SpSopr.cMCUSL       ==   KatMC.NRec      and
    SpSopr.cOtpEd       ==   KatOtpEd.NRec   and
    coKatSopr           ==   TTNDoc.wTable   and
    KatSopr.nRec        ==   TTNDoc.cDoc     and
    TTNDoc.cOrgAvt      ==   KatOrg.nRec     and  // автопредприятие
    TTNDoc.cTransp      ==   Transp.nRec     and  // код автомобиля
    TTNDoc.cDriver      ==   KnDriver.nRec   and  // код водителя
    TTNDoc.cPunPMet     ==   MetLoad.NRec         //способ погрузки
  ))
;
.fields
  KatSopr.NSopr
  DateToStr(KatSopr.dSopr,'от "DD" Mon YYYY г.')
  if (KatOrg.TipOrg<>'',KatOrg.TipOrg+' ','')+KatOrg.Name
  if (BaseKatOrg.TipOrg<>'',BaseKatOrg.TipOrg+' ','')+BaseKatOrg.Name
  Transp.Nomer
  KnDriver.Name
  Cur_Time
  KatMC.Name
  KatMC.Name
  string(SpSopr.KolFact)+' '+KatOtpEd.Name
  MetLoad.Name

  KatSopr.NSopr
  DateToStr(KatSopr.dSopr,'от "DD" Mon YYYY г.')
  if (KatOrg.TipOrg<>'',KatOrg.TipOrg+' ','')+KatOrg.Name
  if (BaseKatOrg.TipOrg<>'',BaseKatOrg.TipOrg+' ','')+BaseKatOrg.Name
  Transp.Nomer
  KnDriver.Name
  KatMC.Name
  KatMC.Name
  string(SpSopr.KolFact)+' '+KatOtpEd.Name
  MetLoad.Name

  PadCh(KnDriver.Name,' ',30)
.endfields //                                                        норм.!           элита!
.p 55
.begin
  if ((GetFirst KatSopr <> 0) or
      (GetFirst SpSopr  <> 0) )
    {
    Message(''#3'Распоряжение на отгрузку печатать нельзя.',0) ;
    SC_Rasp_t.fExit ;
    }
end.
