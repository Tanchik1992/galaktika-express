.begin
  var KolLine, KolLine2: word;

  inc(KolPage); 
  inc(KolSpSopr);

#ifdef _TORG_12L_
  KolLine  := KolAddInStr (Название, 24, true);
  KolLine2 := KolAddInStr (КодМц, 11, true);
#else
  KolLine  := KolAddInStr (Название, 20, true);
  KolLine2 := KolAddInStr (КодМц, 7, true);
#end

  if (KolLine2 > KolLine)
    KolLine := KolLine2;

  if (KolLine > 0)
  {
    KolPage := KolPage + KolLine;

    if (KolPage > FixKolPage)
    {
      NextPage   := true;
      KolAdd     := KolLine + 1;
      FixKolPage := FixKol;
    }
  }
end.
