.begin
  var KolLine: word;

  inc(KolPage); 
  inc(KolSpSopr);

  KolLine  := KolAddInStr (Название, 31, true);

  if (KolLine > 0)
  {
    KolPage := KolPage + KolLine;

    if (KolPage > FixKolPage)
    {
      NextPage   := true;
      KolAdd     := KolLine + 1;
      FixKolPage := FixKol;
    }
  }
end.
