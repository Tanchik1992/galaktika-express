.create view sky
 from
   Flight,
   AirPlType,
   Airport AirportFrom,
   Airport AirportTo
 where
 ((
  Flight.cAirPlType   == AirPlType.nRec    and
  Flight.cAirportFrom == AirportFrom.nRec  and
  Flight.cAirportTo   == AirportTo.nRec
 ));
