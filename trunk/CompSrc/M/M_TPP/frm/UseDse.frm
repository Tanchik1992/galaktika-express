!=============================================================================
.LinkForm 'UseDSE1' Prototype is 'UseDSE'
.group 'UseDSE1'
.NameInList 'Структура применяемости матценности'
.var
  Р_строка  : string
  Т_строка  : string
  Черта : string
  Уровень   : integer;
.endvar
.fields
  Дата_отчета
  Ед_измерения
.endfields
.begin
 Уровень:=0;
 Черта :='';
 Т_строка :=  '';
end.
                        ОТЧЕТ О ПРИМЕНЯЕМОСТИ МАТЦЕННОСТИ
 Параметры расчета
   на дату    :  ^
   в единицах :  ^

.{
.begin
  Р_строка := Строка_дерева+Признак_продукта+Наименование+ ' '+Обозначение+'   '+ Ед_объекта + Т_строка +
            String(Количество, 0, 2) +' '+ Единица_изделия + Черта + String(Всего, 0, 2) +
             ' ' + Единица_измерения+ ' '+Тип+Документ;
  if Уровень = 0
  {
   Уровень:=1;
   Черта  :='/';
   Т_строка := '  = ' ;
  }
end.
.FIELDS
  Р_строка
.ENDFIELDS
@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@
.}
.endform
